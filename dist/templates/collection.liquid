{% comment %}

For more information on collection tags:
- http://docs.shopify.com/themes/liquid-variables/collection

{% endcomment %}

{% if collection.metafields.collection.type == 'exclusive' %}
{% assign is_exclusive = true %}
{% endif %}

<style>
{% if collection.metafields.other_images.desktop_hero != blank %}
{% assign other_images = collection.metafields.other_images %}

.collection-page-hero {
  background-image: url('{{ other_images.desktop_hero }}');
}

@media screen and (min-width: 481px) and (max-width: 1024px){
  .collection-page-hero {
    background-image: url('{{ other_images.tablet_hero }}');
  }
}

@media screen and (max-width: 480px){
  .collection-page-hero {
    background-image: url('{{ other_images.mobile_hero }}');
  }
}
{% endif %}
{% if collection.metafields.hero.headingColor != blank %}
.collection-page-hero h2 {
  color: {{ collection.metafields.hero.headingColor }};
}
{% endif %}

{% if collection.metafields.hero.hideHeading == 'true' %}
.collection-page-hero .content {
  display: none;
}
{% endif %}

{% if collection.metafields.hero.centerBackground == 'true' %}
.collection-page-hero {
  background-position: top center !important;
}
{% endif %}

</style>


<div id="collectiontop" class="collection-page-hero">
  <div class="wrapper">
    <div class="content">

      <h2>
        Theia.
        <br />
        {{ collection.title }}
        <br />
        Collection.
      </h2>

    </div>
    <div class="logo">

      {% comment %}
      <div class="usa-today-logo">
      {{ 'usa-today-logo.svg' | asset_url | img_tag }}
      {{ 'usa-today-logo.png' | asset_url | img_tag }}
    </div>
    {% endcomment %}

  </div>
</div>
</div>

<div class="page-header">
  <div class="wrapper">
    <h2>In this collection:</h2>
  </div>
</div>
<div class="product-grid-filter-hero">
  <div class="wrapper">
    {% include 'product-grid-filters' %}
  </div>
</div>
<div class="product-grid-hero">
  <div class="wrapper">


    {% paginate collection.products by 12 %}

    {{collection.description}}

    {% comment %}
    Use class grid-uniform to have evenly sized columns clear
    each other properly at each breakpoint.
    {% endcomment %}

    {% comment %}
    Loop through our products in the current collection.
    See the snippet 'product-grid-item' for the layout.
    {% endcomment %}

    <div id="collection-matrix">
    {% for product in collection.products %}

    {% if forloop.last == true %}
      {% assign lastClass = true %}

      {% else %}
      {% assign lastClass = false %}

    {% endif %}


    {% include 'product-grid-item' %}

    {% else %}

    <div class="grid-item">
      <p>Sorry, there are no products matching your search.</p>
    </div>


    {% endfor %}


    {% if paginate.next %}
    <ul>
      {% comment %}
      li more class is used by infinite scroll to grab the url of next dresses
      {% endcomment %}
     <li class="more">&darr; <a href="{{ paginate.next.url }}">More</a></li>
   </ul>
     {% else %}
     <div style="padding: 0;">
       <ul class="pagination-block">
         <li class="top"><a href="#collectiontop">Back to Top</a> &uarr;</li>
         <li id="end" style="display: none"></li>
      </ul>
 </div>
    {% endif %}

    </div>

    <!-- {% if paginate.pages > 1 %}
    {% include 'pagination-block' %}
    {% endif %} -->

    <div id="product-list-foot"></div>

    {% endpaginate %}


  </div>
</div>

<hr class="hr-4-col" />

<div class="collection-grid-hero">
  <div class="wrapper">

    <h2>Other collections from Theia:</h2>

    {% for collection in collections limit:4 %}

    {% include 'collection-grid-item' %}

    {% endfor %}

  </div>
</div>

<hr class="hr-4-col" />

<div class="newsletter-signup-hero">

  <h2>Keep in touch:</h2>

  {% include 'newsletter-signup-block' %}

</div>

<div class="social-link-hero">

  {% include 'social-link-block' %}

</div>
